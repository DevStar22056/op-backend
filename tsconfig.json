{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "build"
  },
  "include": [
    "migrate.ts",
    "src/**/*",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}